{
    "manifest_version": 3,
    "name": "Is this AI?",
    "version": "0.1",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost:5000/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
